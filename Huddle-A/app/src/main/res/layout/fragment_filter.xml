<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:inputType="textNoSuggestions"
    android:background="@android:drawable/screen_background_light_transparent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="@string/individual"
        android:id="@+id/ibutton_filter"
        android:background="@drawable/custombutton" />

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="@string/group"
        android:id="@+id/gbutton_filter"
        android:background="@drawable/custombutton"
        android:layout_alignTop="@+id/ibutton_filter"
        android:layout_alignParentEnd="true" />

    <View android:id="@+id/divider2_filter"
        android:layout_height="1dip"
        android:layout_below="@+id/ibutton_filter"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        android:background="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" />

    <Button
        android:layout_width="150dip"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:text="@string/social"
        android:id="@+id/sbutton_filter"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/ibutton_filter" />
    <Button
        android:layout_width="150dip"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:text="@string/Academic"
        android:id="@+id/abutton_filter"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/gbutton_filter"
        android:layout_alignParentEnd="true"/>

    <View android:id="@+id/divider3_filter"
        android:layout_height="1dip"
        android:layout_below="@+id/sbutton_filter"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        android:background="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:id="@+id/locbutton_filter"
        android:hint="Location"
        android:backgroundTint="#000000"
        android:layout_below="@+id/divider3_filter"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_marginTop="40dip"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:id="@+id/submit_button_filter"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/locbutton_filter"
        android:layout_alignParentEnd="true"/>



</RelativeLayout>
