<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:padding="5dip"
    tools:ignore="NewApi">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@mipmap/ic_launcher"/>


    </LinearLayout>
    <TextView
        android:id="@+id/initials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:text="JC"
        android:textColor="#000000"
        android:paddingLeft="20dip"
        android:typeface="sans"
        android:textSize="12dip"
        android:textStyle="normal"/>

    <!-- Title-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Look at this title and how blue it is"
        android:textColor="?attr/colorPrimary"
        android:typeface="sans"
        android:textSize="16dip"
        android:textStyle="normal"/>

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="#000000"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="blah blah look at this fuckin description" />



    <!-- Arrow -->
    <ImageView android:layout_width="80px"
        android:id="@+id/arrow"
        android:layout_height="80px"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <!-- Location -->
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="CLC"
        android:textSize="10dip"
        android:textColor="#919191"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/initials"

         />
    <!-- Time/Date/Whatever -->
    <TextView
        android:id="@+id/time"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="look at this time and or date right here"
        android:textSize="10dip"
        android:textColor="#919191"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/initials"
         />

</RelativeLayout>