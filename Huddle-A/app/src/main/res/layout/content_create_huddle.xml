<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:inputType="textNoSuggestions"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_huddle"
    tools:context="com.example.justin.huddle_a.CreateHuddle">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:inputType="textNoSuggestions"
        android:maxLength="50"
        android:hint="Title"
        android:backgroundTint="#000000"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:maxLength="160"
        android:layout_below="@+id/editText"
        android:inputType="textMultiLine|textNoSuggestions"
        android:hint="Description"
        android:backgroundTint="#000000"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="@string/individual"
        android:id="@+id/ibutton"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/editText2" />

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="@string/group"
        android:id="@+id/gbutton"
        android:background="@drawable/custombutton"
        android:layout_alignTop="@+id/ibutton"
        android:layout_alignParentEnd="true" />

    <View android:id="@+id/divider2"
        android:layout_height="1dip"
        android:layout_below="@+id/ibutton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        android:background="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" />

    <Button
        android:layout_width="150dip"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:text="@string/social"
        android:id="@+id/sbutton"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/ibutton" />
    <Button
        android:layout_width="150dip"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:text="@string/Academic"
        android:id="@+id/abutton"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/gbutton"
        android:layout_alignParentEnd="true"/>

    <View android:id="@+id/divider3"
        android:layout_height="1dip"
        android:layout_below="@+id/sbutton"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        android:background="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:id="@+id/locbutton"
        android:hint="Location"
        android:backgroundTint="#000000"
        android:layout_below="@+id/divider3"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_marginTop="40dip"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_button"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/locbutton"
        android:layout_alignParentEnd="true"/>



</RelativeLayout>
